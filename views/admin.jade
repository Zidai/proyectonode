extends ./layout.jade
block content
	link(href="css/login.css" rel="stylesheet")

	section(class="container")
		form(class="form-signin" method="POST" action="/verificacion")
			h1(class="form-signin-heading") Acceso al Sistema
			h4 Usuario:
			input(type="text" placeholder="Nombre de usuario" class="input-block-level" name="user")
			h4 Contraseña:
			input(type="password" placeholder="Contraseña" class="input-block-level" name="password")
			button(class="btn btn-large btn-primary center-block botonLogin" type="submit") Entrar